# 環境設定
ENVIRONMENT=development

# サーバー設定
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10
SERVER_WRITE_TIMEOUT=10
SERVER_IDLE_TIMEOUT=60

# データベース設定（PostgreSQL）
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=pomodoro
DB_SSL_MODE=disable

# PgAdmin設定
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# DynamoDB設定
DYNAMO_REGION=ap-northeast-1
DYNAMO_ROUND_OPTIMIZATION_TABLE=round_optimization_logs
DYNAMO_SESSION_OPTIMIZATION_TABLE=session_optimization_logs
DYNAMO_USER_CONFIG_TABLE=user_configs

# AWS Cognito設定
COGNITO_REGION=ap-northeast-1
COGNITO_USER_POOL_ID=ap-northeast-1_xxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT設定
JWT_SECRET=your-jwt-secret
JWT_EXPIRATION=24
JWT_REFRESH_EXPIRATION=168

# SNS/SQS設定
SNS_REGION=ap-northeast-1
SNS_ROUND_TOPIC_ARN=arn:aws:sns:ap-northeast-1:xxxxxxxxxxxx:round-optimization
SNS_SESSION_TOPIC_ARN=arn:aws:sns:ap-northeast-1:xxxxxxxxxxxx:session-optimization

# ロギング設定
LOG_LEVEL=info
